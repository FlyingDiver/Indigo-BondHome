            </Field>
            <Field id="off_cmd" type="menu">
                <Label>Off Command:</Label>
                <List class="self" method="get_command_list" dynamicReload="true"/>
                <CallbackMethod>menuChanged</CallbackMethod>
            </Field>
        </ConfigUI>
    </Device>

    <Device id="bondFan" type="speedcontrol">
        <Name>Ceiling Fan</Name>
        <ConfigUI>
            <Field id="SupportsStatusRequest" type="checkbox" defaultValue="false" hidden="true" />
            <Field id="LastSpeed" type="textfield" hidden="true" defaultValue="100"/>
            <Field id="bridge" type="menu">
                <Label>Bridge:</Label>
                <List class="self" method="get_bridge_list" dynamicReload="true"/>
                <CallbackMethod>menuChanged</CallbackMethod>
            </Field>
            <Field id="address" type="menu">
                <Label>Device:</Label>
                <List class="self" method="get_device_list" filter="CF" dynamicReload="true"/>
                <CallbackMethod>menuChanged</CallbackMethod>
            </Field>
            <Field id="on_cmd" type="menu">
                <Label>On Command:</Label>
                <List class="self" method="get_command_list" dynamicReload="true"/>
                <CallbackMethod>menuChanged</CallbackMethod>
            </Field>
            <Field id="off_cmd" type="menu">
                <Label>Off Command:</Label>
                <List class="self" method="get_command_list" dynamicReload="true"/>
                <CallbackMethod>menuChanged</CallbackMethod>
            </Field>
        </ConfigUI>
        <States>
            <State id="ActualSpeed">
                <ValueType>Integer</ValueType>
                <TriggerLabel>Fan Speed %</TriggerLabel>
                <ControlPageLabel>Fan Speed %</ControlPageLabel>
            </State>
        </States>
    </Device>
    
    <Device id="bondDevice" type="relay">
        <Name>Generic Device</Name>
        <ConfigUI>
            <Field id="SupportsStatusRequest" type="checkbox" defaultValue="false" hidden="true" />
