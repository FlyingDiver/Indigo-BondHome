<?xml version="1.0"?>
<Devices>
    <SupportURL>https://forums.indigodomo.com/viewforum.php?f=295</SupportURL>
   <DeviceFactory>
        <Name>Create Bond Device</Name>
        <ButtonTitle>Create</ButtonTitle>
        <ConfigUI>
            <Field id="SupportsStatusRequest" type="checkbox" defaultValue="false" hidden="true" />
			<Field id="bond_type" type="textfield" hidden="true" />

        <!-- Factory Device Type Selection -->
        ï¿¼   <Field type="menu" id="deviceType">
                <Label>Device Type:</Label>
                <List>
                    <Option value="bondBridge">Bond Bridge or Bridge Pro</Option>
                    <Option value="bondDevice">Bond Controlled Device</Option>
                    <Option value="bondSmart">Smart by Bond Device</Option>
                </List>
                <CallbackMethod>menuChanged</CallbackMethod>
            </Field>
             <Field id="separator1" type="separator"/>

            <!-- Bond Bridge and Smart by Bond -->

            <Field id="found_bridge_list" type="menu" defaultValue="" visibleBindingId="deviceType" visibleBindingValue="(bondBridge, bondSmart)">
                <Label>Discovered Bridges:</Label>
                <List class="self" method="found_bridge_list" dynamicReload="true"/>
                 <CallbackMethod>menuChanged</CallbackMethod>
            </Field>
            <Field id="address" type="textfield"  defaultValue="" tooltip="Enter IP address or Hostname of Bond device."
                   visibleBindingId="deviceType" visibleBindingValue="(bondBridge, bondSmart)">
				<Label>IP Address or Hostname:</Label>
                 <CallbackMethod>menuChanged</CallbackMethod>
			</Field>
			<Field id="token" type="textfield" defaultValue="" tooltip="Local Token" visibleBindingId="deviceType" visibleBindingValue="(bondBridge, bondSmart)">
				<Label>Local Token:</Label>
			</Field>

            <!-- Bridge Controlled Device -->

            <Field id="bridge" type="menu" visibleBindingId="deviceType" visibleBindingValue="(bondDevice)" alwaysUseInDialogHeightCalc="true">
                <Label>Bridge:</Label>
                <List class="self" method="get_bridge_list" dynamicReload="true"/>
                <CallbackMethod>menuChanged</CallbackMethod>
            </Field>
            <Field id="bond_device_id" type="menu" visibleBindingId="deviceType" visibleBindingValue="(bondDevice)" alwaysUseInDialogHeightCalc="true">
                <Label>Device:</Label>
                <List class="self" method="get_device_list" dynamicReload="true"/>
                <CallbackMethod>menuChanged</CallbackMethod>
            </Field>

            <!-- Bridge Controlled Device or Smart by Bond -->

             <Field id="on_command" type="menu" visibleBindingId="deviceType" visibleBindingValue="(bondDevice, bondSmart)" alwaysUseInDialogHeightCalc="true">
                <Label>On Command:</Label>
                <List class="self" method="get_action_list" dynamicReload="true"/>
            </Field>
             <Field id="on_parameter" type="textfield" visibleBindingId="deviceType" visibleBindingValue="(bondDevice, bondSmart)" alwaysUseInDialogHeightCalc="true">
                <Label>On Parameter:</Label>
            </Field>
            <Field id="off_command" type="menu" visibleBindingId="deviceType" visibleBindingValue="(bondDevice, bondSmart)" alwaysUseInDialogHeightCalc="true">
                <Label>Off Command:</Label>
                <List class="self" method="get_action_list" dynamicReload="true"/>
            </Field>
            <Field id="off_parameter" type="textfield" visibleBindingId="deviceType" visibleBindingValue="(bondDevice, bondSmart)" alwaysUseInDialogHeightCalc="true">
                <Label>Off Parameter:</Label>
            </Field>
			<Field id="argumentNote3" type="label" fontSize="small" fontColor="darkgray"
                   visibleBindingId="deviceType" visibleBindingValue="(bondDevice, bondSmart)" alwaysUseInDialogHeightCalc="true">
				<Label>Some device commands, such as 'SetSpeed' for ceiling fans, require a parameter.  Leave blank if not required.</Label>
			</Field>
			<Field id="argumentNote4" type="label" fontSize="small" fontColor="darkgray"
                   visibleBindingId="deviceType" visibleBindingValue="(bondDevice, bondSmart)" alwaysUseInDialogHeightCalc="true">
				<Label>Variable and Device State Substitution is enabled for this field. Use the format %%v:12345%% for variables and %%d:12345:someStateId%% for device states.</Label>
			</Field>
        </ConfigUI>
    </DeviceFactory>

